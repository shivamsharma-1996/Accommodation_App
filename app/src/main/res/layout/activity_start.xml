<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Start.StartActivity">


    <TextView
        android:id="@+id/start_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:text="Select Identity:"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />


    <RadioGroup
        android:id="@+id/start_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <RadioButton
            android:id="@+id/start_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seller"
            android:padding="20dp"
            android:textSize="25sp"
            android:textColor="#ffffff"
            />
        <RadioButton
            android:id="@+id/start_seeker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seeker"
            android:padding="14dp"
            android:textSize="23sp"
            android:textColor="#ffffff"
            />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:padding="12dp"
        >

        <Button
            android:id="@+id/start_signupBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/btn_background"
            android:text="signup"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="7dp"
            android:layout_height="wrap_content"
            android:text=""/>

        <Button
            android:id="@+id/start_signinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/btn_background"
            android:backgroundTint="#ffffff"
            android:text="signin"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</RelativeLayout>
