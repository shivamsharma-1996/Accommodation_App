<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<TextView
    android:id="@+id/extra_charge_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Charges"
    android:textStyle="bold"
    android:textSize="20sp"
    android:textColor="@android:color/black"
    android:padding="5dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>


    <TextView
        android:id="@+id/bt_no_charges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click for Including in Rent"
        android:gravity="center"
        android:clickable="true"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_bg"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-------------- OR ----------------"
        android:textColor="@android:color/black"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        >
    <EditText
        android:id="@+id/et_extra_charge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
        android:layout_weight="8"
        android:background="@drawable/rounded_bg"
        android:padding="10dp"
            android:hint="Enter extra charge"
        android:textColorHint="@android:color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:maxLength="5"
        android:inputType="number"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="/month"
            android:textSize="15sp"
            android:gravity="center_vertical"
></TextView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-------------- OR ----------------"
        android:textColor="@android:color/black"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/bt_as_per_meter_charges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click for as per Submeter"
        android:gravity="center"
        android:clickable="true"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_bg"
        android:layout_margin="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="5dp">

            <Button
                android:id="@+id/bt_exit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Exit"
                android:clickable="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/custom_extra_charge_btn_bg"
                         />



          <!--  <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="OR"
                android:textSize="15dp"
                android:gravity="center"/>-->
            <Button
                android:id="@+id/bt_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Submit"
                android:clickable="true"
                android:textStyle="bold"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

</LinearLayout>