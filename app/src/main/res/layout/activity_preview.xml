<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Advertise.PreviewActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">






        <include layout="@layout/tool_bar_layout"
            android:id="@+id/toolbar"/>



        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/ad_input_background"/>





        <!-- <View
             android:id="@+id/v1"
             style="@style/horizontalViewStyle"
             android:layout_below="@+id/view_pager" />
 -->



        <include layout="@layout/essential_room_detail"/>




        <!-- <View
             style="@style/horizontalViewStyle" />
 -->

        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#e0e0e0"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"/>-->


        <android.support.v7.widget.CardView
            style="@style/CardStyle"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="5dp">

                    <TextView
                        style="@style/tvStyle"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:text="Owner"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp" />

                    <View
                        style="@style/verticalViewStyle" />

                    <TextView
                        android:id="@+id/preview_owner_name"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        style="@style/ll_tvStyle"
                        android:layout_weight="7"
                        android:text="Shiv"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="5dp">

                    <TextView
                        style="@style/tvStyle"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:text="Phone"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="30dp" />

                    <View
                        style="@style/verticalViewStyle" />

                    <TextView
                        android:id="@+id/preview_owner_phone"
                        style="@style/tvStyle"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:text="+918824965636"
                        android:gravity="center"
                        android:drawableTint="#27e113"
                        android:drawableRight="@drawable/call" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>-->

        <!--<include layout="@layout/room_details_layout" />-->

        <LinearLayout
            android:id="@+id/preview_ll_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/ammenity_rec_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="#e0e0e0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10">

            <Button
                android:id="@+id/preview_btn_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/preview_btn_bg1"
                android:text="Edit"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/preview_btn_upload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/preview_btn_bg2"
                android:text="Upload"
                android:layout_margin="8dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>



</ScrollView>
