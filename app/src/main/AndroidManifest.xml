<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shivam.complete_dashboard">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".Other.ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Start.RegisterActivity"
            android:parentActivityName=".Start.StartActivity" />
        <activity android:name=".Activities.MainActivity">
        </activity>
        <activity android:name=".Start.StartActivity" />
        <activity android:name=".Start.LoginActivity" />
        <activity
            android:name=".Start.ForgotPassword"
            android:parentActivityName=".Start.LoginActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" /> <!-- optional (needed if default theme has no action bar) -->

        <activity
            android:name=".Activities.BookmarkActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Advertise.AdActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Advertise.PreviewActivity"
            android:parentActivityName=".Advertise.AdActivity" />
        <activity
            android:name=".Activities.MyAddsActivty"
            android:parentActivityName=".Activities.MainActivity" />
        <activity android:name=".Activities.DetailViewActivity" />
        <activity
            android:name=".Activities.DetailViewActivity2"
            android:parentActivityName=".Activities.MainActivity" />
        <activity android:name=".Activities.FullScreenActivity" />
        <activity android:name=".Start.RegisterActivity2" />

        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>